.category {
  display: flex;
  height: calc(100vh - 70rpx);
}
.category .categoryLeft {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
}
.category .categoryLeft view {
  height: 80rpx;
  line-height: 80rpx;
}
.category .categoryLeft .active {
  color: var(--themeColor);
  border-left: 8rpx solid currentColor;
}
.category .categoryRight {
  flex: 3;
}
.category .categoryRight .title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
  font-size: 32rpx;
}
.category .categoryRight .title text:nth-child(2) {
  margin: 0 5rpx;
}
.category .categoryRight .item2 {
  display: inline-block;
  width: 33.33%;
}
.category .categoryRight .item2 navigator {
  text-align: center;
}
.category .categoryRight .item2 navigator image {
  width: 50%;
}
